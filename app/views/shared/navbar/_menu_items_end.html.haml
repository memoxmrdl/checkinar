.navbar-end
  .navbar-item
    - if user_signed_in?
      .dropdown.is-hoverable
        .dropdown-trigger
          %button.button.is-link{"aria-controls" => "dropdown-menu-options", "aria-haspopup" => "true"}
            %span
              = current_user.full_name.blank? ? current_user.email : current_user.full_name
            %span.icon
              = figure_image_tag(current_user.avatar, variant_resize: "256x256", size: "is-256x256", class: "is-rounded")
        #dropdown-menu-options.dropdown-menu{:role => "menu"}
          .dropdown-content
            = link_to "Mi cuenta", edit_account_path, class: "dropdown-item", "data-turbolinks" => "false"
            %hr.dropdown-divider
            = link_to t(".sign_out"),  destroy_user_session_path, class: "dropdown-item", method: :delete
    - else
      = link_to t(".sign_in"), user_session_path, class: "button is-default"
